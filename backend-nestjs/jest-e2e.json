{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testMatch": [
    "<rootDir>/test/**/*.e2e-spec.{ts,js}"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverage": true,
  "coveragePathIgnorePatterns":  [
    "/node_modules/",
    "/src/typeorm/",
    "/src/filters/sentryFilter.ts",
    "/src/modules/typeorm",
    "/src/modules/env",
    "/src/modules/test",
    "test"
  ],
  "coverageDirectory": "./coverage",
  "globals": {
    "NODE_ENV": "test"
  },
  "testTimeout": 12000
}
