{
  "name": "@h4ad/omnistack-api",
  "version": "0.0.1",
  "description": "A API para o projeto Be The Hero da semana OmniStack 11 feita em NestJS.",
  "author": "Vinícius Lourenço",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:api:debug": "cross-env TZ=UTC nest start --debug --watch --preserveWatchOutput",
    "start:audit:debug": "cross-env TZ=UTC nest start audit --debug --watch --preserveWatchOutput",
    "start:analytics:debug": "cross-env TZ=UTC nest start analytics --debug --watch --preserveWatchOutput",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "npm run test:e2e",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_ENV=apps/api/test node node_modules/jest/bin/jest.js --config ./jest-e2e.json",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "typeorm:cli": "ts-node ./node_modules/typeorm/cli -f ormconfig.js",
    "migration": "npm run typeorm:cli -- migration:run",
    "add-migration": "npm run typeorm:cli -- migration:generate -n",
    "revert-migration": "npm run typeorm:cli -- migration:revert"
  },
  "engines": {
    "node": "16.x"
  },
  "dependencies": {
    "@nestjs/axios": "0.0.8",
    "@nestjs/common": "8.4.7",
    "@nestjs/config": "2.2.0",
    "@nestjs/core": "8.4.7",
    "@nestjs/jwt": "8.0.1",
    "@nestjs/passport": "8.2.2",
    "@nestjs/platform-express": "8.4.7",
    "@nestjs/swagger": "5.2.1",
    "@nestjs/terminus": "8.1.1",
    "@nestjs/throttler": "2.0.1",
    "@nestjs/typeorm": "8.0.4",
    "@sentry/minimal": "6.19.7",
    "@sentry/node": "7.17.2",
    "bcryptjs": "2.4.3",
    "body-parser": "1.20.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "connect-timeout": "^1.9.0",
    "coveralls": "3.1.1",
    "cross-env": "7.0.3",
    "envalid": "6.0.2",
    "express": "4.18.2",
    "express-rate-limit": "6.6.0",
    "helmet": "6.0.0",
    "ms": "2.1.3",
    "passport": "0.6.0",
    "passport-jwt": "4.0.0",
    "passport-local": "1.0.0",
    "pg": "8.8.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.5.7",
    "sqlite3": "5.1.2",
    "swagger-ui-express": "4.5.0",
    "typeorm": "0.2.41",
    "xss": "1.0.14"
  },
  "devDependencies": {
    "@nestjs/cli": "8.2.8",
    "@nestjs/schematics": "8.0.11",
    "@nestjs/testing": "8.4.7",
    "@types/express": "4.17.14",
    "@types/jest": "29.2.0",
    "@types/ms": "0.7.31",
    "@types/node": "16.18.2",
    "@types/passport-jwt": "3.0.7",
    "@types/passport-local": "1.0.34",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.41.0",
    "@typescript-eslint/parser": "5.41.0",
    "eslint": "8.26.0",
    "eslint-import-resolver-typescript": "3.5.2",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-node": "11.1.0",
    "jest": "29.2.2",
    "prettier": "2.7.1",
    "supertest": "6.3.1",
    "ts-jest": "29.0.3",
    "ts-loader": "9.4.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "4.8.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/"
    ]
  }
}
